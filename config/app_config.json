{
  "version": "1.0.0",
  "app": {
    "name": "Recogniz.ing",
    "version": "1.0.0",
    "buildNumber": "1"
  },
  "api": {
    "gemini": {
      "model": "gemini-1.5-flash",
      "maxTokens": 4096,
      "temperature": 0.7,
      "topP": 0.9,
      "topK": 40
    }
  },
  "audio": {
    "sampleRate": 44100,
    "bitDepth": 16,
    "channels": 1,
    "maxRecordingDuration": 3600,
    "silenceThreshold": 0.01,
    "minRecordingLength": 1,
    "vadThreshold": 0.5,
    "amplitudeThreshold": 0.02,
    "speechRatioThreshold": 0.1,
    "minFileSize": 1000,
    "minDuration": 0.5
  },
  "ui": {
    "fab": {
      "size": 56,
      "iconSize": 28
    },
    "animation": {
      "duration": {
        "fast": 150,
        "normal": 300,
        "slow": 500
      }
    },
    "debounce": {
      "search": 300,
      "input": 500
    }
  },
  "storage": {
    "maxTranscriptionsPerPage": 50,
    "maxHistoryEntries": 1000,
    "cacheSize": "100MB"
  },
  "features": {
    "globalHotkeys": {
      "enabled": true,
      "defaultShortcut": "Cmd+Shift+Space"
    },
    "systemTray": {
      "enabled": true,
      "showOnStartup": true
    },
    "autoSave": {
      "enabled": true,
      "interval": 30
    }
  }
}